#!/bin/sh

cat <<EOF | debconf-set-selections
postfix	postfix/mynetworks	string	127.0.0.0/8
postfix	postfix/root_address	string	$ADMINEMAIL
postfix	postfix/protocols	select	ipv4
postfix	postfix/relayhost	string	mail.$CNAME.bla
postfix	postfix/procmail	boolean	false
postfix	postfix/chattr	boolean	false
postfix	postfix/recipient_delim	string	+
postfix	postfix/destinations	string	\$myhostname, localhost.\$mydomain, localhost
postfix	postfix/main_mailer_type	select	Internet with smarthost
postfix	postfix/mailbox_limit	string	0
postfix	postfix/rfc1035_violation	boolean	false
postfix	postfix/mailname	string	$FQDN
EOF
grep -q $ADMINEMAIL /etc/aliases || echo root: $ADMINEMAIL >>/etc/aliases
dpkg-reconfigure postfix
