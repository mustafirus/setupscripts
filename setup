#!/bin/bash
./scripts/locale_tz
SOFT='Kosher-Config-Generator'
FINGER="# Autogenerated by $SOFT
"
ADMINEMAIL=golubev@nt.net.ua

FQDN=$(hostname -f)
IFS=. read HOSTNAME CPART CNAME BLA < <(echo $FQDN)
[ x$HOSTNAME = xgw ] && LANDEV=lan0 || LANDEV=eth0
IP=$(ip addr show dev $LANDEV 2>/dev/null | awk '/inet .* brd .* scope/{sub(/\/.*/,"",$2); print $2}')  ##'
IFS=. read PNET CNET CSUB CIPN < <(echo $IP)

if [ "$HOSTNAME" = pm1 ] ; then
APT=/etc/apt/sources.list.d
mv -u $APT/pve-enterprise.list $APT/pve-enterprise.save
echo deb http://download.proxmox.com/debian jessie pve-no-subscription > $APT/pve.list
fi


echo "Check setup data"
echo "hostname: $FQDN"
echo "ip:       $IP"
echo -n "Its OK - Continue?(y/N)"
read ok
[ x$ok = xy ] || [ x$ok = xY ] || exit 1


[ x$PNET != 'x10' ] && echo error: not 10.x.x.x network  && exit 1
[ x$BLA != 'xbla' ] && echo error: not bla network  && exit 1
[ -z CNET ] || [ -z CSUB ] || [ -z CPART ] || [ -z CNAME ] && cat <<EOF
Error: Empty VARS!
CNET $CNET
CSUB $CSUB
CPART $CPART 
CNAME $CNAME
EOF

export FQDN HOSTNAME CNET CSUB CPART CNAME SOFT ADMINEMAIL

apt-get update
apt-get upgrade

~/setupscripts/packages/postfix

[ -r ./$HOSTNAME.conf ] || exit 1

PACKAGES_ALL=
MODULES_ALL=
. ./common.conf
PACKAGES_ALL="$PACKAGES_ALL $PACKAGES"
MODULES_ALL="$MODULES_ALL $MODULES"
. ./$HOSTNAME.conf
PACKAGES_ALL="$PACKAGES_ALL $PACKAGES"
MODULES_ALL="$MODULES_ALL $MODULES"

apt-get install $PACKAGES_ALL


CONF=/tmp/conf
DEST=/tmp/test

[ -e $CONF ] && rm -rf $CONF
mkdir -p $CONF

(
    cd modules
    for mod in $MODULES_ALL ; do
	cp -a $mod/* $CONF
    done
)

check_dir(){
    DIRNAME=$(dirname $1)
    [ -d $DIRNAME ] || mkdir -p $DIRNAME
}

process_file(){

    [ -z "$1" ] && return
    FILENAME="${1%.once}"
    F=
    if [ x$FILENAME != x$1 ] ; then
	[ -e $DEST/$FILENAME ] && return
    else
	F=$FINGER
    fi

    echo $FILENAME
    DIRNAME=$(dirname $DEST/$FILENAME)
    [ -d $DIRNAME ] || mkdir -p $DIRNAME

eval "cat <<EOF >$DEST/$FILENAME
$F$(cat $CONF/$1)
EOF"
chmod --reference=$CONF/$1 $DEST/$FILENAME
} 


(cd $CONF
find * -type l ) | while read FILE
do
    check_dir $DEST/$FILE
    cp -af $CONF/$FILE $DEST/$FILE
done

(cd $CONF
find * -type f \! -name 'exec.*' ) | while read FILE
do
    process_file $FILE
done

exit

(cd $CONF
    cat $(find * -type f -name 'exec.*')
) | while read LINE
do
    [ -z "$LINE" ] && continue
    echo "$LINE"
    eval "$LINE"
done

